<% provide(:title, "Log in") %>


<div class="container">
  <h1>Admin Login</h1>

  <%= form_for(:session, url: login_path) do |f| %>

  <%= f.label :username %>
  <%= f.text_field :username, class: 'form-control' %>

  <%= f.label :password %>
  <%= f.password_field :password, class: 'form-control' %>

  <%= f.submit "Enter", class: "btn btn-primary" %>
  <% end %>

</div>