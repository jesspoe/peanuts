<% if flash[:notice] %>
<div class="alert alert-danger" align="center">
  <p>
    <%= flash[:notice] %>
  </p>
</div>
<% end %>

<div class="container">
  <h3>Create Admin</h3>

  <form>
    <%= form_for @admin, url: admins_path do |f| %>

    <div class="form-group">
      <%= f.label :username %></br>
      <%= f.text_field :username, required: true, class: "form-control"%></br>
    </div>

    <div class="form-group">
      <%= f.label :password %></br>
      <%= f.password_field :password, required: true, class: "form-control"%></br>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %></br>
      <%= f.password_field :password_confirmation, required: true, class: "form-control" %></br>
    </div>

    <%= f.submit 'Submit', class: 'btn btn-primary' %>
    <% end %>

  </form>
</div>