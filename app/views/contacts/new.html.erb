<div class="form-container">
  <h1 class="contact-title">Send us a Message</h1>

  <div class="contact-form">

    <%= form_tag("/contacts", method: "post") do %>
    <%= label_tag(:name) %>
    <%= text_field_tag(:name) %>
    <%= label_tag(:email) %>
    <%= text_field_tag(:email) %>
    <%= label_tag(:message) %>
    <%= text_area_tag(:message) %>
    <%= submit_tag("Subit") %>
    <% end %>
  </div>

</div>